@if (Model.Count() <= 0)
{
    <div>
        <label style="color:red">No Records Found</label>
    </div>
}
<table border="1">
    @if (Model.Count() > 0)
    {
        <tr>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Contact</label>
            </th>
            <th>
                <label>Level/Post</label>
            </th>
            <th>
                <label>Action</label>
            </th>

        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.first_name),
                @Html.DisplayFor(modelItem => item.last_name)-
                @Html.DisplayFor(modelItem => item.emp_id)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.mobile_num),
                @Html.DisplayFor(modelItem => item.email_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emp_level)/@Html.DisplayFor(modelItem => item.post_name)
            </td>
            <td>
                @Html.ActionLink("Employments", "Details", new { id = item.emp_id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.emp_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.emp_id })
            </td>
        </tr>

    }

</table>

